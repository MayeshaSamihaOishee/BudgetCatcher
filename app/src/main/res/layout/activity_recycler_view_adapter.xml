<?xml version="1.0" encoding="utf-8"?><android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#f5f7fa"
    card_view:contentPaddingTop="15dp"
    card_view:cardMaxElevation="0dp"
    >

    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="200dp"
        android:background="#ffffff"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/textview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="19.5dp"
            android:textStyle="bold"
            android:padding="75dp"
            android:textColor="#888888"
            android:layout_gravity="left"
            android:gravity="left"
            />

        <ImageView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:background="@drawable/paypal"/>

        <CheckBox
            android:id="@+id/checkb"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:button="@drawable/custom_checkbox"
            android:scaleX="3"
            android:scaleY="3"
            android:layout_alignRight="@id/textview1"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
             />


    </RelativeLayout>
</android.support.v7.widget.CardView>